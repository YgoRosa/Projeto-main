{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Snake",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/snake.c",
                "-o",
                "${workspaceFolder}/output/snakeExecutable",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/screen.c",
                "${workspaceFolder}/src/keyboard.c",
                "${workspaceFolder}/src/timer.c",
                "-lm"  // Adicione outras bibliotecas necess√°rias aqui, se houver
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
